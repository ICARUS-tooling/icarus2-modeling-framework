<?xml version="1.0" encoding="UTF-8"?>

<corpora>
	<corpus editable="false" id="testCorpus">
		<rootContext id="test.tier1.format" independent="true" name="Tier-1 Tabular Format" primaryLayer="token" foundationLayer="token">
			
			<layerGroup id="main" independent="true" primaryLayer="token">
				
				<!-- SURFACE PART -->
				
				<itemLayer id="token" />	
				
				<annotationLayer id="form" defaultKey="form">	
					<baseLayer layerId="token"/>
					<annotation key="form" name="Word Form"/>
				</annotationLayer>	
				
				<annotationLayer id="lemma" defaultKey="lemma">	
					<baseLayer layerId="token"/>
					<annotation key="lemma" name="Word Lemma"/>
				</annotationLayer>
			</layerGroup>
			
			<location>
				<!-- use path relative to projects root folder -->
				<path type="file">src\test\resources\de\ims\icarus2\filedriver\schema\table\singleBlock.txt</path>
			</location>
			
			<driver>
				<implementation classname="de.ims.icarus2.filedriver.DefaultFileDriverFactory" factory="true" />
				<properties>
					<property name="loadOnConnect" valueType="boolean">true</property>
					<property name="encoding">UTF-8</property>
				</properties>
				<module moduleSpecId="converter">
					
				</module>
			</driver>
		</rootContext>
	</corpus>
</corpora>
